// Default: "1"
// Minimum: "0.000000"
// Maximum: "1.000000"
l4d_infectedbots_coop_versus_tank_playable "1"

// If 1, bots will only spawn when all other bot spawn timers are at zero
// -
// Default: "0"
// Minimum: "0.000000"
// Maximum: "1.000000"
